<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/layout_width_144dp"
    android:layout_height="@dimen/layout_height_108dp"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    android:background="@drawable/album_shape_dark" >

    <ImageView
        android:id="@+id/album_cover"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_margin="@dimen/layout_margin_4dp"
        android:background="@color/white"
        android:contentDescription="@null"
        android:scaleType="centerCrop" >
    </ImageView>

    <TextView
        android:id="@+id/album_title"
        android:layout_width="@dimen/layout_width_144dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center|bottom"
        android:layout_marginBottom="@dimen/layout_margin_4dp"
        android:layout_marginLeft="@dimen/layout_margin_4dp"
        android:layout_marginRight="@dimen/layout_margin_4dp"
        android:background="@color/shadow_dark"
        android:ellipsize="none"
        android:gravity="center_vertical"
        android:padding="@dimen/padding_8dp"
        android:singleLine="true"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size_12sp" >
    </TextView>

    <ImageView
        android:id="@+id/album_delete"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_gravity="right"
        android:layout_marginRight="2dp"
        android:layout_marginTop="2dp"
        android:contentDescription="@null"
        android:scaleType="center"
        android:src="@drawable/icon_delete" />

</FrameLayout>